@model ToursansTripArange.Models.News

@{
    ViewBag.Title = "addnews";
}


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
<div class="banner">
    <div class="agileinfo-dot">
        <div class="w3-agileits-about-banner">
            <div class="container">
                <h2>ADD News</h2>
            </div>
        </div>
    </div>
</div>
<h2>addnews</h2>

@using (Html.BeginForm("addnewsconfirm", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @Html.Label("Place Name")
    @Html.EditorFor(model => model.Name)
    @Html.ValidationMessageFor(model => model.Name)
    <br />    <br />
    @Html.Label("Place image")
    @Html.EditorFor(model => model.image)
    @Html.ValidationMessageFor(model => model.image)
    <br />    <br />
    @Html.Label("Trip Description")
    @Html.EditorFor(model => model.Description)
    @Html.ValidationMessageFor(model => model.Description)
    <br />    <br />
   
    @* Name <input type="text" name="Name" />*@
    <input type="submit" value="AddNews" id="btnsubmit" />
}
