@model ToursansTripArange.Models.Place
@{
    ViewBag.Title = "addplace";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
<div class="banner">
    <div class="agileinfo-dot">
        <div class="w3-agileits-about-banner">
            <div class="container">
                <h2>ADD PLACE</h2>
            </div>
        </div>
    </div>
</div>
<h2>addplace</h2>

@using (Html.BeginForm("addplaceconfirm", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    
    @Html.Label("Place Name")
    @Html.EditorFor(model => model.placename)
     @Html.ValidationMessageFor(model => model.placename)
    <br />    <br />
    @Html.Label("Place Location")
    @Html.EditorFor(model => model.placelocation)
    @Html.ValidationMessageFor(model => model.placelocation)
    <br />    <br />
    @Html.Label("Place Description")
    @Html.EditorFor(model => model.placedescription)
     @Html.ValidationMessageFor(model => model.placedescription)
    <br />    <br />
    @Html.Label("Place image")
    @Html.EditorFor(model => model.placeimage)
     @Html.ValidationMessageFor(model => model.placeimage)
    <br />    <br />
   
    @* Name <input type="text" name="Name" />*@
    <input type="submit" value="Add Place" id="btnsubmit"  />
}
  
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script>

        $(document).ready(function () {
            $('#btnsubmit').click(function () {

                placename = $("#placename").val();
                 placelocation = $("#placelocation").val();
                 placedescription = $("#placedescription").val();
                 placeimage = $("#placeimage").val();

                $.ajax({
                    url: '/Home/addplaceconfirm',
                    type: "POST",
                    contentType: false, // Not to set any content header
                    processData: false, // Not to process data
                    data: { placename: placename, placelocation: placelocation, placedescription: placedescription, placeimage: placeimage },
                    success: function (result) {
                        alert(result);
                    },
                    error: function (err) {
                        alert(err.statusText);
                    }
                })
            })

        });
    </script>


